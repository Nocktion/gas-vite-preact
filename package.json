{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build && node ./scripts/build.js",
		"build:client": "vite build",
		"build:server": "node ./scripts/build.js",
		"build:push": "vite build && node ./script/build.js && clasp push",
		"preview": "vite preview",
		"build:css:watch": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css --watch",
		"lint": "npx eslint src",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "npx prettier src --check",
		"prettier:fix": "npm run prettier -- --write",
		"format": "npm run prettier:fix && npm run lint:fix",
		"prepare": "husky",
		"test:watch": "vitest",
		"test": "vitest run",
		"deploy:dev": "npm run format && npm test && npm run build && ncp .clasp-dev.json .clasp.json && ncp appscript.json dist/appscript.json && clasp push -f",
		"deploy:prod": "npm run format && npm test && npm run build && ncp .clasp-prod.json .clasp.json && ncp appscript.json dist/appscript.json && clasp push -f",
		"deploy": "npm run deploy:dev"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.17",
		"esbuild": "^0.27.0",
		"preact": "^10.26.9",
		"preact-iso": "^2.11.0",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@preact/preset-vite": "^2.10.2",
		"@types/google-apps-script": "^2.0.7",
		"eslint": "^9.39.1",
		"eslint-config-preact": "^2.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-googleappsscript": "^1.0.5",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^27.2.0",
		"ncp": "^2.0.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.0.4",
		"vite-plugin-singlefile": "^2.3.0",
		"vitest": "^4.0.13"
	},
	"eslintConfig": {
		"extends": "preact"
	}
}
